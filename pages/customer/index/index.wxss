/*优惠券列表样式*/
.discount-coupon-item {
    margin-top: 20rpx;
    display: flex;
    margin-left: 30rpx;
}

.discount-coupon-item .discount-coupon-info {
    background-color: #ffffff;
    position: relative;
    width: 510rpx; 
    height: 243rpx; 
    display: flex;
    justify-content: center;
}
.discount-coupon-item .discount-coupon-info .half-circle {
  position: absolute;
  left: -27rpx;
  top: 94rpx;
  width: 54rpx;
  height: 54rpx;
}
.discount-coupon-item .discount-coupon-info .info-wrap {
    width: 350rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
    font-size: 28rpx;
}
.discount-coupon-item .discount-coupon-info .info-wrap text {
  text-align: center;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.discount-coupon-item .discount-coupon-info .info-wrap .discount-coupon-phone {
    padding-top: 20rpx;
    font-size: 60rpx;
    color: #c60e16;
}
.discount-coupon-item .discount-coupon-info .info-wrap  .discount-coupon-des {
    padding-top: 17rpx;
}
.discount-coupon-item .discount-coupon-info .info-wrap .discount-coupon-expire {
  padding-top: 10rpx;
}
.discount-coupon-item .enter-shop {
    width: 176rpx;
    font-size: 28rpx;
    background-color: #fdc3c3;
    color: #c60e16;
    display: flex;
    align-items: center;
    justify-content: center;
}
.discount-coupon-item .discount-coupon-right {
  width: 3rpx;
  height: 243rpx;
  margin-right: 30rpx;
}

/*优惠券详情*/
.dis-cou-detail {
  position: fixed;
  background-color: rgba(0,0,0,.5);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10002;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dis-cou-detail .detail-content {
  width: 600rpx;
  background-color: #ffffff;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
  padding-bottom: 30rpx;
}
.dis-cou-detail .detail-content .cancel {
  position: absolute;
  width: 55rpx;
  height: 47rpx;
  top: 14rpx;
  right: 14rpx;
}
.dis-cou-detail .detail-content .phone {
  margin-top: 40rpx;
  font-size: 60rpx;
}
.dis-cou-detail .detail-content .discunt-pic {
   margin-top: 40rpx;
   width: 238rpx;
   height: 238rpx;
}
.dis-cou-detail .detail-content .discount-intro {
  margin: 40rpx 76rpx;
  text-align: left;
}
.dis-cou-detail .detail-content .receive-time {
  color: #cda839;
}
.dis-cou-detail .detail-content .expired-time {
  color: #cda839;
  margin-top: 30rpx;
}


/*底部选项卡样式*/
.bottom-tabbar {
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  border-top: 1rpx solid #eeeeee;
}
.shop, .mine {
  height: 100%;
  flex: 1;
  color: #c60e16;
  text-align: center;
  line-height: 100rpx;
}
.cur {
  background-color: #c60e16;
  color: #ffffff;
}

